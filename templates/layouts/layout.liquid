<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Serena Portfolio">
        <meta name="keywords" content="Example">
        <meta name="author" content="Serena">
        <meta name="viewport" content="width=device-width, initial-scale=1">


        <!-- Title block allowing child pages to override -->
        <title>{% block title %}Serena{% endblock %}</title>

        <link rel="shortcut icon" type="image/ico" href="/favicon.ico" />
        <!-- Styles -->
        {{ "application.css" | asset_url | stylesheet_tag }}
        {{ "functions.js" | asset_url | script_tag }}
        {{ "classie.js" | asset_url | script_tag }}
        <!-- Style block allowing child pages to inject their own styles -->
        {% block styles %}{% endblock %}
    </head>
    <body>
        <div id="wrapper" class="cf">
            <!-- Include -->
            {% include "header" %}
                <!--{% include "sidebar" %}-->
                <!-- Content block, child page inject content -->
            {% block content %}{% endblock %}
            {% include "footer" %}
        </div>
        <!-- Script block allowing child pages to inject their own scripts -->
        {% block scripts %}{% endblock %}
        {{ "app.js" | asset_url | script_tag }}
    </body>
</html>